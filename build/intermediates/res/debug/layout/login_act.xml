<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical"  
    >  
    <RelativeLayout 
        android:layout_width="match_parent"  
    	android:layout_height="wrap_content"
    	android:background="#FFF"
    	android:paddingBottom="24dp"
        >
        <TextView 
            android:id="@+id/serviceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器地址配置"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_alignRight="@+id/logo"
            android:layout_marginTop="10dp"
            />
        <ImageView 
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_below="@id/serviceAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"  
    	android:layout_height="0.0dp"
    	android:layout_weight="1"
    	android:background="#3098E8"
    	android:paddingLeft="40dp"
    	android:paddingRight="40dp"
    	android:orientation="vertical"
        >
        <EditText 
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/login_icon_user"
            android:drawablePadding="5dp"
            android:background="#FFF"
            android:textSize="16sp"
            android:paddingLeft="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/loginPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/login_icon_password"
            android:drawablePadding="5dp"
            android:paddingLeft="6dp"
            android:background="#FFF"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:password="true"
            />
        <Button 
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:padding="5dp"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#005FCA"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/tvVisionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:textColor="#e9e9e9"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright ○ 广州聚超软件科技有限公司 \n All Rights Reserved"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textColor="#e9e9e9"
            />
    </LinearLayout>
</LinearLayout> 
