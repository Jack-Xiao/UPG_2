<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#FFF"
    android:orientation="vertical"  
    >  
   <RelativeLayout
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content"  
	    android:background="@drawable/title_bg"
	    >
	    <TextView 
	        android:id="@+id/wx_header_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#99FFFF"
	        android:textSize="16sp"
	        android:gravity="center_vertical"
	        android:drawableLeft="@drawable/header_back"
	        android:drawablePadding="2dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        />
	    <TextView 
	        android:id="@+id/wx_header_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/title_service_address"
	        android:textColor="#FFF"
	        android:textSize="16sp"
	        android:maxLines="2"
	        android:ellipsize="end"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp"
	        android:layout_toRightOf="@id/wx_header_left"
	        android:layout_centerInParent="true"
	        />
	</RelativeLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
        >
         <ListView 
		    android:id="@+id/wx_listView"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="@null"
			android:dividerHeight="0dp"
			android:listSelector="@null"
			android:cacheColorHint="#00000000"
			android:scrollbars="none"
		    />
        <TextView 
            android:id="@+id/wx_noResult"
            android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="没有找到结果"
			android:gravity="center_horizontal"
			android:paddingTop="30dp"
			android:textColor="#333333"
			android:textSize="14sp"
			android:visibility="gone"
            />
    </RelativeLayout>
    
</LinearLayout> 
