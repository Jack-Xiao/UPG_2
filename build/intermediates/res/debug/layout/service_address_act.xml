<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#FFF"
    android:orientation="vertical"  
    >  
    <RelativeLayout 
        android:layout_width="match_parent"  
    	android:layout_height="42dp"
    	android:background="#0190DE"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_service_address"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <!-- @string/service_address -->
    <include layout="@layout/second_gray_title_layout" />
    
    <EditText 
        android:id="@+id/et_service_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        />
    <!-- @string/service_port -->
    <include layout="@layout/second_gray_title_layout" android:id="@+id/port"/>
    
    <EditText 
        android:id="@+id/et_service_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        />
    <include layout="@layout/bottom_double_btn_layout"/>
</LinearLayout> 
